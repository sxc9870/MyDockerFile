
##本地定制网段
docker network create --subnet=172.172.0.0/24 sxc-redis




python build-server.py  0.0.0.0 123456 m 172.172.0.2:6379
python build-server.py  0.0.0.0 123456 s 172.172.0.2:6379


python run-server.py  redis-master 56379:6379  redis:master-server sxc-redis 172.172.0.2
python run-server.py  redis-slave  56380:6379  redis:slave-server sxc-redis 172.172.0.3
python run-server.py  redis-slave2  56381:6379  redis:slave-server sxc-redis 172.172.0.4



python build-sentinel.py   0.0.0.0 123456 172.172.0.3:6379
python run-server.py  redis-sentinel  46379:26379 redis:sentinel sxc-redis 172.172.0.12
python run-server.py  redis-sentinel1  46380:26379 redis:sentinel sxc-redis 172.172.0.13
python run-server.py  redis-sentinel2  46381:26379 redis:sentinel sxc-redis 172.172.0.14




docker exec -it redis-master  tail -f /data/redis/redis.log
docker exec -it redis-sentinel  tail -f /data/redis/sentinel.log

docker exec -it redis-slave  /bin/sh